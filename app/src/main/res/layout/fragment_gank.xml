<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:refresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/load_progress"
        android:layout_width="@dimen/title_height"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        app:mlpb_enable_circle_background="true"
        app:mlpb_progress_color="?attr/colorPrimary"
        app:mlpb_progress_text_visibility="invisible"
        android:layout_marginTop="540px"
        app:mlpb_show_arrow="true" />

    <com.cjj.MaterialRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        refresh:isLoadMore="true"
        refresh:overlay="false"
        refresh:wave_color="?attr/colorPrimary"
        refresh:wave_show="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </com.cjj.MaterialRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_to_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/floating_margin_bottom"
        android:layout_marginRight="@dimen/large_margin"
        android:visibility="gone"
        app:borderWidth="0dp"
        app:elevation="@dimen/small_margin"
        app:pressedTranslationZ="@dimen/normal_margin" />

    <com.horizon.gank.hgank.ui.widget.AnimationFrameLayout
        android:id="@+id/afl_no_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_no_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#77000000"
            android:ellipsize="end"
            android:maxLines="3"
            android:gravity="center"
            android:text="无网络连接，点击设置"
            android:padding="@dimen/normal_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_size" />
    </com.horizon.gank.hgank.ui.widget.AnimationFrameLayout>

</com.zhy.autolayout.AutoRelativeLayout>