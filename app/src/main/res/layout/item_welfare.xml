<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        fresco:cardCornerRadius="10px"
        fresco:cardElevation="8px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_iv_welfare"
                style="@style/repple_out_backguound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="720px"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#22000000"
                android:orientation="vertical"
                android:padding="@dimen/min_margin">

                <TextView
                    android:id="@+id/item_tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_size" />

                <TextView
                    android:id="@+id/item_tv_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/min_margin"
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textSize="@dimen/small_size" />
            </LinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>
    </android.support.v7.widget.CardView>
</com.zhy.autolayout.AutoFrameLayout>